alias jn='jupyter notebook' 

py3-activate() {
  cd ${LOCAL_HOME}/python
  source ./py3/bin/activate
}

jp3-activate() {
  cd ${LOCAL_HOME}/jupyter
  source ./py3-jupyter/bin/activate
}

########################################
# iTerm2 Logrotation
########################################

iterm_logrotate() {
  find ${LOCAL_HOME}/logs/termlogs/ -mtime +60 -name "*.log" -print -exec echo {} \;
}

